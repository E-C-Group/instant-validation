{
  "name": "instant-validation",
  "version": "1.0.0",
  "description": "Quck setup. No Dependencies. Framework agnostic valitaion tool",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "checktypes": "tsc --noEmit -p ./tsconfig.json",
    "dev": "watch 'npm run build' src",
    "test": "npm run checktypes && jest",
    "prepush": "npm test",
    "prepublish": "npm run build",
    "build": "tsc"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "\\.(js|jsx)$": "babel-jest"
    },
    "testRegex": "/__tests__/.*.test\\.(ts|tsx|js)$",
    "modulePaths": [
      "./"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "testUtils"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true,
        "tsConfigFile": "./tsconfig.json"
      }
    },
    "testURL": "http://localhost"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nullgr/instant-validation.git"
  },
  "keywords": [
    "react",
    "validation",
    "validator"
  ],
  "author": "Oleksandr Chernenko (ca@nullgr.com, akazimirkas@gmail.com)",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^22.4.4",
    "babel-preset-env": "^1.7.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "ts-jest": "^22.4.6",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^2.9.2",
    "typescript-eslint-parser": "^15.0.1",
    "watch": "^1.0.1"
  }
}
