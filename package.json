{
  "name": "instant-validation",
  "version": "0.4.1",
  "description": "Quick setup. No Dependencies. Framework agnostic validation tool",
  "main": "dist/bundle.min.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "checktypes": "tsc --noEmit -p ./tsconfig.json",
    "dev": "watch 'npm run build' src",
    "test": "npm run checktypes && jest",
    "prepush": "npm test ",
    "prepublish": "npm run build",
    "ts:rules": "tsc -p tsconfig.rules.json",
    "ts:defs": "tsc --declaration --outDir dist --emitDeclarationOnly",
    "rollup": "./node_modules/.bin/rollup -c",
    "build": "npm run ts:defs && npm run ts:rules && npm run rollup"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "\\.(js|jsx)$": "babel-jest"
    },
    "testRegex": "/__tests__/.*.test\\.(ts|js)$",
    "modulePaths": [
      "./"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testPathIgnorePatterns": [
      "testUtils"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nullgr/instant-validation.git"
  },
  "keywords": [
    "validation",
    "forms"
  ],
  "author": "Oleksandr Chernenko (ca@nullgr.com, akazimirkas@gmail.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "babel-jest": "^24.8.0",
    "babel-preset-env": "^1.7.0",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "prettier": "^1.15.3",
    "rollup": "^1.16.4",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.5.1",
    "watch": "^1.0.1"
  }
}
